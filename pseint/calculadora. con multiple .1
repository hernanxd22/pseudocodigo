Algoritmo sin_titulo
	Definir num,num1 Como Entero;
	Definir letra Como Caracter;
	Escribir "ingresa un numero para el calculo ";
	Leer num;
	Escribir "ingresa otro numero para el calculo ";
	Leer num1;
	Escribir "s=suma. r=resta .m=multiplicacion. d=divicion";
	Escribir "ingresa que desea hacer en el calculo ";
	Leer letra;
	Si letra = "S" o letra="s"  Entonces
		Escribir num+num1;
	Fin Si
	Si letra = "R" o letra="r"  Entonces
		Escribir num-num1;
	Fin si
	Si letra = "M" o letra="m"  Entonces
		Escribir num*num1;
	Fin si
	Si letra = "D" o letra="d"  Entonces
		Escribir num/num1;
	Fin si
FinAlgoritmo
